<form
  id="sign-in-form"
  class="form-style"
  action="/users/createSession"
  method="POST"
>
  <input type="email" id="email" name="email" placeholder="Email" required />
  <input
    type="password"
    id="password"
    name="password"
    placeholder="Password"
    required
  />
  <input type="hidden" id="captcha" name="captcha" />
  <input type="submit" value="Sign In" />
</form>
